@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}
<hr />
<h2 style="color:black">Внесете го вашиот емаил.</h2>
<hr />
<form id='registerForm' method="post">
    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email" class="form-label"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mt-3">
    <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary w-100">Испрати</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
