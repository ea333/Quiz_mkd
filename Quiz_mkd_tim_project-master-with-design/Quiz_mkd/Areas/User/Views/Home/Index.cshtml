        .custom-section-bg {
            position: relative;
            width: 100vw;
            margin-left: calc(-50vw + 50%);
            background: linear-gradient(135deg, #343a40 0%, #343a40 100%);
            overflow: hidden;
            color: white;
        }

            .custom-section-bg::before,
