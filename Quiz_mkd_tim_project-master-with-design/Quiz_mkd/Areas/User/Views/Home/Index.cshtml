                        object-fit: cover;
                    }

                    .bg-custom2 .circle-wrapper:hover {
                        transform: scale(1.07);
                        box-shadow: 0 12px 28px rgba(0,0,0,0.35);
                    }

        
                .bg-custom2 .text-box {
                    border: 3px solid #ffc107;
                    box-shadow: 0 0 15px 5px rgba(255, 193, 7, 0.4), inset 0 0 10px rgba(255, 193, 7, 0.6);
                    border-radius: 40px;
                    padding: 1.6rem;
                }

                .bg-custom2 .text-content2 {
                    position: relative;
