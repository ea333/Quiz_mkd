        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6 text-start text-content2 bg-transparent text-white" data-aos="fade-right" data-aos-delay="100">
                <div class="text-box">
                    <p class="lead mb-2">
                        Нашата цел е да обезбедиме интерактивна и квалитетна платформа за учење
                        преку квизови кои развиваат критичко размислување и поттикнуваат љубов кон знаењето. <br />
                        Учесниците имаат можност да се натпреваруваат на локални и регионални настани,
                        да градат пријателства и да напредуваат на ранг-листите со секој нов предизвик.
                    </p>
                </div>
            </div>

            <div class="col-lg-5 text-center mb-4 mb-lg-0" data-aos="fade-left" data-aos-delay="300">
                <div class="circle-wrapper" style="margin-right: 80px">
                    <img src="~/Images/home page/Pub-Quiz-Hero-resized.jpg"
                         alt="Quiz Visual"
                         class="img-fluid" />
                </div>
            </div>
        </div>

        <br />
        <br />

        <section class="lead mb-2 text-center">
            <a asp-area="User" asp-controller="Quiz" asp-action="Index"
               class="py-4 px-5 d-inline-block rounded-pill bubble-effect text-decoration-none"
               data-aos="zoom-in"
               data-aos-delay="400">
                <h1 class="mb-0">Подготвен си за предизвик?</h1>
            </a>
        </section>
    </section>


    <section class="py-5 text-white" style="
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    width: 100vw;
    padding-left: 90px;
    padding-right: 90px;
    background: linear-gradient(135deg, #3469a1 0%, #003463 50%, #3469a1 100%);
">
        <div class="container-fluid px-0">


            <div class="text-center mb-5" data-aos="fade-up">
                <h2 class="fw-bold text-white position-relative d-inline-block">
                    Најнови Настани
                    <span style="position: absolute; bottom: -8px; left: 0; right: 0; height: 2px;
                background: linear-gradient(90deg, transparent, var(--bs-warning), transparent);"></span>
                </h2>
            </div>

            <div class="row gx-0 gy-4 justify-content-center" style="padding: 10px;">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-4 px-3" data-aos="zoom-in" data-aos-delay="200">
              
                        <div class="bg-transparent text-white py-1 fw-bold mb-2" style="font-size: 0.9rem; border-radius: 0.25rem; text-align:left;">
                            <i class="bi bi-calendar-event"></i>
                            @item.Event.StartDate.ToString("dd/MM/yyyy") - @item.Event.EndDate.ToString("dd/MM/yyyy")
                        </div>

                        <div class="card shadow-sm w-100 text-white"
                             style="border-radius: .5rem; overflow: hidden; height: 320px; position: relative; transition: transform 0.3s ease, box-shadow 0.3s ease;"
                             onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 8px 20px rgba(0,0,0,0.4)';"
                             onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 10px rgba(0,0,0,0.2)';">

                            <img src="@(string.IsNullOrEmpty(item.Event.ImageUrl) ? Url.Content("~/Images/default.jpg") : Url.Content(item.Event.ImageUrl))"
                                 alt="@item.Event.Name"
                                 style="width:100%; height:100%; object-fit:cover;" />

                            <div style="
                                position: absolute;
                                top: 0; left: 0; right: 0; bottom: 0;
                                background: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.8));
                            "></div>

                            <div class="card-img-overlay d-flex flex-column justify-content-end text-center" style="z-index:2;">
                                <h5 class="fw-bold" style="font-size: 1.5rem;">@item.Event.Name</h5>
                                <p class="mb-3" style="font-size: 0.9rem;">
                                    @(item.Event.Description?.Length > 100
                                                                    ? item.Event.Description.Substring(0, 100) + "..."
                                                                    : item.Event.Description)
                                </p>

                                <div class="d-flex justify-content-center">
                                    <a asp-area="User" asp-controller="Event" asp-action="Detail" asp-route-eventId="@item.Event.Id"
                                       class="btn btn-dark btn-sm" style="width: 160px;">
                                        Разгледај
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (Model.Count > 0)
            {
                <style>
                    .btn-transparent-border {
                        background-color: var(--bs-primary); /* Bootstrap primary background */
                        color: white;
                        border: 2px solid white;
                        border-radius: 50px;
                        transition: all 0.3s ease;
                    }

                        .btn-transparent-border:hover,
                        .btn-transparent-border:focus {
                            background-color: white;
                            color: var(--bs-primary);
                            text-decoration: none;
                        }
                </style>

                <div class="text-center mt-5" data-aos="fade-up" data-aos-delay="200">
                    <a asp-area="User" asp-controller="Event" asp-action="Index"
                       class="btn btn-lg btn-transparent-border px-5">
                        Прегледај повеќе настани
                    </a>
                </div>
            }
        </div>


        <style>
            .btn-transparent-border {
                background-color: var(--bs-primary); 
                color: white;
                border: 2px solid white;
                border-radius: 50px;
                transition: all 0.3s ease;
            }

                .btn-transparent-border:hover,
                .btn-transparent-border:focus {
                    background-color: white;
                    color: var(--bs-primary);
                    text-decoration: none;
                }

        </style>
    </section>

    <section class="custom-section-bg py-5 text-white text-center" data-aos="fade-up">
        <div class="line-top"></div>
        <div class="line-bottom"></div>

        <div class="container px-0">
            <h2 class="fw-bold position-relative d-inline-block text-white" data-aos="fade-up">
                Ранг Листа
                <span style="position: absolute; bottom: -8px; left: 0; right: 0; height: 2px;
                background: linear-gradient(90deg, transparent, var(--bs-warning), transparent);"></span>
            </h2>

            <div class="row justify-content-center g-4" style="margin-top: 40px">
                @{
                    var topCompetitors = (IEnumerable<dynamic>)ViewBag.TopCompetitors;
                    var numbers = new[] { "1", "2", "3" };
                }

                @if (topCompetitors != null && topCompetitors.Any())
                {
                    int index = 0;
                    foreach (var competitor in topCompetitors)
                    {
                        <div class="col-12 col-sm-6 col-lg-3 d-flex justify-content-center"
                             data-aos="zoom-in" data-aos-delay="@(200 + index * 150)">
                            <div class="competitor-card d-flex flex-column align-items-center justify-content-center text-center p-4">
                                <div class="mb-3">
                                    <i class="fas fa-medal fa-3x icon-shadow"></i>
                                </div>
                                <div class="rank-circle mb-3">@numbers[index]</div>
                                <h4 class="fw-bold">@competitor.FullName</h4>
                                <p class="mt-2 mb-0">
                                    Поени: <span class="fw-bold">@competitor.Points</span>
                                </p>
                            </div>
                        </div>
                        index++;
                    }
                }
                else
                {
                    <p class="text-center text-danger">Нема достапни резултати.</p>
                }
            </div>

            <div class="text-center mt-5" data-aos="fade-up" data-aos-delay="400">
                <a asp-area="User" asp-controller="RangList" asp-action="Index"
                   class="btn btn-lg custom-btn">
                    Види целосна ранг листа
                </a>
            </div>
        </div>
    </section>


